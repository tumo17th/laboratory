<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="net.shu_cream.eclipse.font">
            <command
                  commandId="net.shu_cream.eclipse.font.large"
                  icon="icons/large.gif"
                  id="large"
                  label="Large"
                  style="push"
                  tooltip="Large">
            </command>
            <command
                  commandId="net.shu_cream.eclipse.font.small"
                  icon="icons/small.gif"
                  id="small"
                  label="Small"
                  style="push"
                  tooltip="Small">
            </command>
            <command
                  commandId="net.shu_cream.eclipse.font.reset"
                  icon="icons/reset.gif"
                  id="Reset"
                  label="Reset"
                  style="push"
                  tooltip="Reset">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="net.shu-cream.eclipse.font.category1"
            id="net.shu_cream.eclipse.font.large"
            name="Large">
      </command>
      <command
            categoryId="net.shu-cream.eclipse.font.category1"
            id="net.shu_cream.eclipse.font.small"
            name="Small">
      </command>
      <command
            categoryId="net.shu-cream.eclipse.font.category1"
            id="net.shu_cream.eclipse.font.reset"
            name="Reset">
      </command>
      <category
            id="net.shu-cream.eclipse.font.category1"
            name="FontSizeChanger">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="net.shu_cream.eclipse.font.ToLargeHandler"
            commandId="net.shu_cream.eclipse.font.large">
      </handler>
      <handler
            class="net.shu_cream.eclipse.font.ToSmallHandler"
            commandId="net.shu_cream.eclipse.font.small">
      </handler>
      <handler
            class="net.shu_cream.eclipse.font.ResetHandler"
            commandId="net.shu_cream.eclipse.font.reset">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="net.shu_cream.eclipse.font.large"
            contextId="org.eclipse.ui.contexts.dialogAndWindow"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M3+;">
      </key>
      <key
            commandId="net.shu_cream.eclipse.font.small"
            contextId="org.eclipse.ui.contexts.dialogAndWindow"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M3+-">
      </key>
   </extension>

</plugin>
